<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/overview_item_movie"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            tools:src="@drawable/placeholder" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/overview_item_movie"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:src="@color/black_transparent" />

        <TextView
            android:id="@+id/title_item_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="@dimen/margin_card_item_movie"
            android:layout_marginTop="@dimen/margin_card_item_movie"
            android:layout_toStartOf="@+id/year_item_movie"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="A wonderful movie!" />

        <TextView
            android:id="@id/year_item_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_card_item_movie"
            android:layout_marginTop="@dimen/margin_card_item_movie"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="2014" />

        <TextView
            android:id="@id/overview_item_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/year_item_movie"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="@dimen/margin_card_item_movie"
            android:layout_marginStart="@dimen/margin_card_item_movie"
            android:gravity="end|bottom"
            android:minHeight="80dp"
            android:paddingBottom="@dimen/margin_card_item_movie"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="Thor must confront other gods when Asgard is threatened with Ragnarok, the Norse Apocalypse." />

    </RelativeLayout>
</android.support.v7.widget.CardView>